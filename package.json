{
  "name": "@mybricks/vscode-plugin",
  "description": "vscode plugin for mybricks",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onView:mybricks_welcome",
    "onView:mybricks_debugger",
    "onCommand:mybricks.helloWorld",
    "*"
  ],
  "contributes": {
    "viewsWelcome": [
      {
        "view": "nodeDependencies",
        "contents": "No node dependencies found [learn more](https://www.npmjs.com/).\n[Add Dependency](command:nodeDependencies.addEntry)"
      }
    ],
    "commands": [
      {
        "command": "mybricks.create.comlib",
        "title": "创建组件"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mybricks",
          "title": "Mybricks",
          "icon": "icon.png"
        }
      ]
    },
    "views": {
      "mybricks": [
        {
          "type": "webview",
          "id": "mybricks_welcome",
          "name": "欢迎使用"
        }
      ],
      "explorer": [
        {
          "type": "webview",
          "id": "mybricks_debugger",
          "name": "Mybricks",
          "when": "mybricks:isComlib"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "dev:comlib": "webpack-dev-server --config ./_build/webpack.dev.js"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-react": "^7.18.6",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "babel-loader": "^8.0.6",
    "css-loader": "^6.7.1",
    "eslint": "^8.20.0",
    "less-loader": "^11.0.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.3"
  },
  "dependencies": {
    "fs-extra": "^10.1.0"
  }
}